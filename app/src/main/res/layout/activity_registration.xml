<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_registration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.nike.hacklikeagirl.ui.RegistrationActivity"
        android:background="@android:color/holo_green_dark">

    <TextView
            android:text="Job Title"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:id="@+id/job_title_label" android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/company"/>
    <TextView
            android:text="Rsvp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rsvp"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
            android:text="Company"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:id="@+id/company_label" android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/email"/>
    <EditText
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/first_name"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/rsvp"
            android:layout_marginStart="16dp"
            android:background="@android:color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            android:hint="First Name"
            app:layout_constraintBottom_toTopOf="@+id/last_name"/>
    <EditText
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteY="79dp"
            android:id="@+id/last_name"
            android:background="@android:color/white"
            android:hint="Last Name"
            android:layout_marginStart="24dp"
            app:layout_constraintLeft_toRightOf="@+id/first_name"/>
    <EditText
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:background="@android:color/white"
            android:id="@+id/email"
            android:hint="Email Address"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/last_name"/>
    <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:id="@+id/company"
            android:background="@android:color/white"
            tools:text="Nike"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/company_label"
            android:layout_marginTop="8dp"/>
    <EditText
            android:layout_width="320dp"
            android:layout_height="21dp"
            android:inputType="textPersonName"
            android:ems="10"
            tools:text="Android Developer"
            android:background="@android:color/white"
            android:id="@+id/job_title"
            tools:layout_editor_absoluteX="12dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/job_title_label"/>
    <TextView
            android:text="LinkedIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linkedin_lable"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/job_title"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/linkedin" android:layout_marginStart="16dp"
            android:background="@android:color/white"
            app:layout_constraintLeft_toLeftOf="parent" android:hint="link to linked in"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/linkedin_lable"/>
</android.support.constraint.ConstraintLayout>
