<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.nike.hacklikeagirl.ui.WeatherFragment"
            android:background="@color/wallet_holo_blue_light">

<android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_main"
        >


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            tools:text="Portland"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginTop="80dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            tools:text="Cloudy"

            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1" android:layout_marginEnd="5dp"
            app:layout_constraintRight_toRightOf="@+id/name"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/temp"
            tools:text="61"

            tools:layout_constraintTop_creator="1" android:layout_marginStart="13dp"
            android:layout_marginTop="31dp"
            app:layout_constraintTop_toBottomOf="@+id/description"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/description"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"/>


</android.support.constraint.ConstraintLayout>

</FrameLayout>
